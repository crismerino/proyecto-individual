<section>
  <div class="fotos">
    <% @monumentos.each_with_index do |monumento, index| %>
      <%= image_tag monumento.imagen, { id: "img#{index}", "data-toggle" => "modal", "data-target" => "#myModal#{index}",  "data-time" => monumento.tiempo_visita, "data-price" => monumento.precio_entrada } %>
      <div class="modal fade" id="myModal<%= index %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
              <h4 class="titleModal" id="myModalLabel"><%= monumento.nombre %></h4>
            </div>
            <div class= "bodyModal">
              <%= monumento.descripcion %>
              <br/>Tiempo estimado de la visita: <%= monumento.tiempo_visita  %> minutos
              <br/>Precio: <%= monumento.precio_entrada %> â‚¬
            </div>
            <div class="modal-footer">
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="recuadro" id="dropbox"></div>
</section>

<section class="boxes">
  <div class="time"><p id="printTime">Tiempo estimado de la visita:</p></div>
  <div class="money"><p id="printPrice">Dinero:</p></div>
</section>


	